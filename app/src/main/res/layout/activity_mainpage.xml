<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:itemBackground="@color/colorPrimary"
    app:itemIconTint="@color/icon"
    app:itemTextColor="@color/icon"
    android:background="#ffffff"
    tools:context=".Mainpage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confess your inability as a parent and ask god to take over"
            android:textSize="15dp"
            android:textColor="#000000"
            android:typeface="serif"
            android:fontFamily="sans-serif"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text=" Daily Prayer Challenges"
            android:background="#CDCDCD"
            android:textSize="18dp"
            android:paddingTop="3dp"
            android:textColor="#000000"
            android:typeface="serif"
            android:layout_marginTop="200dp"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="12dp"
             android:layout_marginTop="2dp"
             android:orientation="horizontal"
             >
             <LinearLayout
                 android:layout_width="100dp"
                 android:layout_height="200dp"
                 android:layout_marginLeft="12dp"
                 android:orientation="vertical"
                 >

                 <ImageView
                     android:layout_width="70dp"
                     android:layout_height="70dp"
                     android:layout_marginLeft="12dp"
                     android:src="@drawable/pray"

                     />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_marginTop="5dp"
                     android:layout_height="50dp"
                     android:textSize="15dp"
                     android:layout_marginLeft="12dp"
                     android:textColor="#000000"
                     android:fontFamily="sans-serif"
                     android:typeface="serif"
                     android:text="General"
                     />
             </LinearLayout>
             <LinearLayout
                 android:layout_width="100dp"
                 android:layout_height="200dp"
                 android:orientation="vertical"
                 android:layout_marginLeft="12dp"
                 android:id="@+id/parent"
                 >

                 <ImageView
                     android:layout_width="70dp"
                     android:layout_height="70dp"
                     android:layout_marginLeft="12dp"
                     android:src="@drawable/family"

                     />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_marginTop="5dp"
                     android:layout_height="50dp"
                     android:textSize="15dp"
                     android:fontFamily="sans-serif"
                     android:typeface="serif"
                     android:layout_marginLeft="12dp"
                     android:textColor="#000000"
                     android:text="Parenting"
                     />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="100dp"
                 android:layout_height="200dp"
                 android:orientation="vertical"
                 android:layout_marginLeft="12dp"
                 android:id="@+id/marriage"
                 >

                 <ImageView
                     android:layout_width="70dp"
                     android:layout_height="70dp"
                     android:layout_marginLeft="12dp"
                     android:src="@drawable/marriage"

                     />
                 <TextView
                     android:layout_width="100dp"
                     android:layout_marginTop="5dp"
                     android:layout_height="50dp"
                     android:textSize="15dp"
                     android:typeface="serif"
                     android:fontFamily="sans-serif"
                     android:layout_marginLeft="12dp"
                     android:textColor="#000000"
                     android:text="Marriage"
                     />
             </LinearLayout>

         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="-150dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_marginLeft="12dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/town"

                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif"
                    android:typeface="serif"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000"
                    android:text="My town"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/church"

                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="sans-serif"
                    android:typeface="serif"
                    android:textColor="#000000"
                    android:text="My Church"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:id="@+id/myprayer"
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/pencil"

                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:typeface="serif"
                    android:fontFamily="sans-serif"
                    android:text="Write my own"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>